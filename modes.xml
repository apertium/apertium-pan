<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="pan-morph" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="pan.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="pan-gener" install="yes">
    <pipeline>
      <program name="lt-proc -g">
        <file name="pan.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="pan-tagger" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="pan.automorf.bin"/>
      </program>
      <program name="cg-proc -w">
        <file name="pan.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="pan-disam" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="pan.automorf.bin"/>
      </program>
      <program name="cg-conv -a -l" />
      <program name="vislcg3 --trace -g">
        <file name="apertium-pan.pan.rlx"/>
      </program>
    </pipeline>
  </mode>

</modes>

